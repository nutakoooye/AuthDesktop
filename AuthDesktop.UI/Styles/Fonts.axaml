<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

   
    <Style Selector=":is(TextBlock).h1">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,16,0,12"/>
    </Style>

    <Style Selector=":is(TextBlock).h2">
        <Setter Property="FontSize" Value="26"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="0,14,0,10"/>
    </Style>

    <Style Selector=":is(TextBlock).h3">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,12,0,8"/>
    </Style>

    <Style Selector=":is(TextBlock).h4">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,10,0,6"/>
    </Style>

    <Style Selector=":is(TextBlock).h5">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,8,0,4"/>
    </Style>

    <Style Selector=":is(TextBlock).h6">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="Margin" Value="0,6,0,2"/>
    </Style>

    <Style Selector=":is(TextBlock).danger">
        <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector=":is(TextBlock).warning">
        <Setter Property="Foreground" Value="{DynamicResource WarningColor}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector=":is(TextBlock).success">
        <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style Selector=":is(TextBlock).information">
        <Setter Property="Foreground" Value="{DynamicResource InformationColor}"/>
    </Style>

</Styles>
