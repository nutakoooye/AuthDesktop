<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Border Classes="Card"></Border>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="Border.Card">
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="{DynamicResource StartBorderGradientColor}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource EndBorderGradientColor}" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style Selector="Border.Card.Level2">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                    <GradientStop Color="{DynamicResource EndBorderGradientColor}" Offset="0.0"/>
                    <GradientStop Color="{DynamicResource StartBorderGradientColor}" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
</Styles>
