<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AuthDesktop.ViewModels;assembly=AuthDesktop.ViewModels">
    <DataTemplate x:Key="MultiTabTemplate" DataType="vm:MultiTabViewModel">
        <DockPanel>
            <Panel DockPanel.Dock="Top" HorizontalAlignment="Center">
                <ListBox Classes="Rounded" ItemsSource="{Binding Tabs, Mode=TwoWay}" SelectedItem="{Binding SelectedTab}" Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Width="150">
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Title}" />
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Panel>
            <Border Classes="Card Level2">
                <ContentControl Content="{Binding SelectedTab.ViewModel}" />
            </Border>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>