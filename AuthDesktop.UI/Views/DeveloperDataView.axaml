<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AuthDesktop.ViewModels;assembly=AuthDesktop.ViewModels">
    <DataTemplate x:Key="DeveloperDataTemplate" DataType="vm:DeveloperDataViewModel">
        <Panel Name="AuthPanel">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" MinWidth="300">
                    <SelectableTextBlock Classes="h4" Text="{Binding Name}"></SelectableTextBlock>
                    <SelectableTextBlock Classes="h5" Text="{Binding Version}"></SelectableTextBlock>
                    <SelectableTextBlock Classes="h5" Text="{Binding AboutProgram}"></SelectableTextBlock>
                    <SelectableTextBlock Classes="h5" Text="{Binding Email}"></SelectableTextBlock>
                    <Button Classes="hyperlink" Content="GitHub" 
                            Command="{Binding HandleLinkCommand}"
                            CommandParameter="{Binding Website}">
                    </Button>
                    <Separator/>
                    <SelectableTextBlock Text="{Binding License}"></SelectableTextBlock>
                </StackPanel>
            </ScrollViewer>
        </Panel>
    </DataTemplate>
</ResourceDictionary>