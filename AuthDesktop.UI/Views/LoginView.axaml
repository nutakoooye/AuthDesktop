<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AuthDesktop.ViewModels;assembly=AuthDesktop.ViewModels">
    <DataTemplate x:Key="LoginTemplate" DataType="vm:LoginViewModel">
        <Border>
            <StackPanel>
                <TextBox Classes="Form" Text="{Binding LoginText}" Watermark="username"></TextBox>
                <TextBox Classes="Form" Text="{Binding PasswordText}" Watermark="password" PasswordChar="*"></TextBox>
                
                <TextBlock HorizontalAlignment="Center" Text="{Binding ErrorMessage}" Classes="danger"></TextBlock>
                
                <Button Classes="Card" Command="{Binding LoginCommand}" Content="LOG IN"/>
                
                <ProgressBar IsVisible="{Binding IsBusy}" IsIndeterminate="True"></ProgressBar>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>