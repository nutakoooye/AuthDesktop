<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AuthDesktop.ViewModels;assembly=AuthDesktop.ViewModels">
    <DataTemplate x:Key="LoginTemplate" DataType="vm:LoginViewModel">
        <Border>
            <StackPanel>
                <TextBox Text="{Binding LoginText}" Watermark="login"></TextBox>
                <TextBox Text="{Binding PasswordText}" Watermark="password" PasswordChar="*"></TextBox>
                <Button Command="{Binding LoginCommand}">Login</Button>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>