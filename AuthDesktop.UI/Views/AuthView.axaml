<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:AuthDesktop.ViewModels;assembly=AuthDesktop.ViewModels">
    <DataTemplate x:Key="AuthTemplate" DataType="vm:AuthViewModel">
        <Panel>
            <DockPanel IsVisible="{Binding !AuthStateService.IsLoggedIn}">
                <Panel DockPanel.Dock="Bottom">
                    <Button Command="{Binding RegisterCommand}"
                            Classes="Card"
                            Content="Register"/>
                </Panel>
                <ContentControl VerticalAlignment="Center"
                                Content="{Binding LoginVm}"/>
            </DockPanel>
            
            <StackPanel IsVisible="{Binding AuthStateService.IsLoggedIn}" VerticalAlignment="Center">
                <Button Classes="Card" Command="{Binding LogoutCommand}" Content="LOG OUT"/>
                <TextBlock Classes="danger" Text="{Binding ErrorMessage}"/>
            </StackPanel>
        </Panel>
        
    </DataTemplate>
</ResourceDictionary>
